<% present @familiar do |presenter| %>

<div class="familiar">
  <%= title @familiar.name %>

  <div class="left">
    <%= presenter.image(:div) %>
    <%= presenter.sales %>
  </div>

  <div class="right">
    <%= presenter.median %>
    <%= presenter.new_sale(@sale) %>
    <div id="container" style="float:left; width:560px; height:300px;"></div>

    <% end %>

    <script type="text/javascript" charset="utf-8">
      $(function(){
        new Highcharts.Chart({
          chart: {
            renderTo: "container",
            type: 'column'
          },
          title: {
            text: "Mandrake"
          },
          xAxis: {
            categories:<%= @hash.keys.sort %>
          },
          yAxis: {
            title: {
              text: "min"
            }
          },
          series: [{
            data: <%= @hash.keys.sort.map{|e| @hash[e]} %>,
          }],
        });
      });
    </script>
  </div>
</div>
